{
  "manifest_version": 3,
  "name": "Smart Tab Organiser - Free",
  "version": "1.0",
  "description": "Free version: Organize your tabs by domain, save sessions, and manage tab groups. Upgrade for advanced features.",
  "homepage_url": "https://colourchemist.co.in/Smart-Tab-Manager-Chrome-Extension/index.php",
  "author": "Hari Krishnan",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.jpeg",
      "32": "icons/icon32.jpeg",
      "48": "icons/icon48.jpeg",
      "128": "icons/icon128.jpeg"
    }
  },
  "icons": {
    "16": "icons/icon16.jpeg",
    "32": "icons/icon32.jpeg",
    "48": "icons/icon48.jpeg",
    "128": "icons/icon128.jpeg"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
} 