{
  "manifest_version": 3,
  "name": "Smart Tab Organiser - CC",
  "version": "1.0",
  "description": "A powerful extension to automatically organize, manage, and analyze your browser tabs.",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "offscreen",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.jpeg",
      "48": "icons/icon48.jpeg",
      "128": "icons/icon128.jpeg"
    }
  },
  "icons": {
    "16": "icons/icon16.jpeg",
    "48": "icons/icon48.jpeg",
    "128": "icons/icon128.jpeg"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [{
    "resources": ["preview.html"],
    "matches": ["<all_urls>"]
  }]
} 