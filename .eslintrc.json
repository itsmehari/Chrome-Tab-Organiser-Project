{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true
  },
  "extends": "eslint:recommended",
  "ignorePatterns": ["lib/**/*.js", "dist/**/*.js"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "off",
    "no-case-declarations": "off"
  },
  "globals": {
    "Chart": "readonly"
  }
} 